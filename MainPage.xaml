<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="custoViagem.MainPage">

    <ScrollView>
        <StackLayout>

            <Label Text="Origem:" />
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino:" />
            <Entry BindingContext="destino" x:Name="txt_destino" />

            <Label Text="Distancia" />
            <Entry BindingContext="distancia" x:Name="txt_distancia" />

            <Label Text="Rendimento" />
            <Entry BindingContext="rendimento" x:Name="txt_rendimento" />

            <Label Text="Preço Combustivel" />
            <Entry BindingContext="valor_combustivel" x:Name="txt_combustivel" />

            <Button Margin="5" WidthRequest="200" HorizontalOptions="Center" x:Name="btnCreatePedagio" Text="Adicionar pedagio" Clicked="btnCreatePedagio_Clicked"/>
            <Button Margin="5" WidthRequest="200" HorizontalOptions="Center" x:Name="btnListaPedagio" Text="Lista pedagio" Clicked="btnListaPedagio_Clicked"/>
            <Button Margin="5" WidthRequest="200" HorizontalOptions="Center" x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
