<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="custoViagem.Views.CriarPedagio"
             Title="Criar Pedagio">
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="Local:"/>
            <Entry BindingContext="local" x:Name="txt_local"/>

            <Label Text="Valor:"/>
            <Entry BindingContext="valor"  x:Name="txt_valor" />

            <Button Text="Adicionar" WidthRequest="250" Margin="20"  HorizontalOptions="Center" x:Name="btn_enviar"/>

        </StackLayout>
    </VerticalStackLayout>
</ContentPage>