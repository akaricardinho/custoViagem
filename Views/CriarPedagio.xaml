<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="custoViagem.Views.CriarPedagio"
             Title="Criar Pedagio">
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="Local:"/>
            <Entry x:Name="txtLocal" BindingContext="local"/>

            <Label Text="Valor:"/>
            <Entry x:Name="txtValor" BindingContext="valor" />

            <Button x:Name="btnAdicionar" BackgroundColor="Red" Clicked="btnAdicionar_Clicked" Text="Adicionar" WidthRequest="250" Margin="20"  HorizontalOptions="Center"/>

        </StackLayout>
    </VerticalStackLayout>
</ContentPage>