<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="custoViagem.Views.ListaPedagio"
             Title="Lista Pedagio">
    <VerticalStackLayout>
        <ListView x:Name="lst_pedagio">
            <ListView.Header>
                <Grid ColumnDefinitions="*, auto">
                    <Label Grid.Column="0" Text="Local:"/>
                    <Label Grid.Column="1" Text="Valor:"/>
                </Grid>

            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="*,auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Local}"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Valor}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="btnSomar" Clicked="btnSomar_Clicked" Text="Somar" HorizontalOptions="Center" WidthRequest="250" Margin="20"/>
        <Button x:Name="btnAddNovo" Clicked="btnAddNovo_Clicked" Text="Add Novo" HorizontalOptions="Center" WidthRequest="250" Margin="20"/>
    </VerticalStackLayout>
</ContentPage>